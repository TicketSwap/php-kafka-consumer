{
    "name": "ticketswap/kafka-consumer",
    "description": "PHP library to consume Kafka messages",
    "type": "library",
    "autoload": {
        "psr-4": {
            "TicketSwap\\Kafka\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "TicketSwap\\Kafka\\": "tests/"
        }
    },
    "require": {
        "php": "^7.4",
        "ext-pcntl": "*",
        "long-running/long-running": "^0.4|^0.5",
        "symfony/dependency-injection": "^3.4|^4.4|^5.1",
        "symfony/config": "^3.4|^4.4|^5.1",
        "symfony/http-kernel": "^3.4|^4.4|^5.1",
        "symfony/console": "^3.4|^4.4|^5.1",
        "psr/log": "^1.1"
    },
    "suggest": {
        "ext-newrelic": "*"
    },
    "require-dev": {
        "mockery/mockery": "^1.3",
        "phpunit/phpunit": "^8.5",
        "kwn/php-rdkafka-stubs": "^2.0"
    },
    "scripts": {
        "test": "vendor/bin/phpunit --process-isolation"
    }
}
